<% Houston.config.project_colors.each do |name, value| %>
  $<%= name %>: <%= value.rgb %>;
<% end %>

@mixin age($color) {
  &.infant  { border-color: lighten($color, 14%); background-color: lighten($color, 35%); }
  &.child   { border-color: lighten($color,  8%); background-color: lighten($color, 28%); }
  &.adult   { border-color: lighten($color,  2%); background-color: lighten($color, 24%); }
  &.senior  { border-color:  darken($color,  8%); background-color: lighten($color, 20%); }
  &.old     { border-color:  darken($color, 12%); background-color: lighten($color, 16%); }
  &.ancient { border-color:  darken($color, 20%); background-color: lighten($color, 12%); }
}

#kanban li {
  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> { @include age($<%= name %>) }
  <% end %>
}

.label {
  vertical-align: baseline;
  
  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> { background-color: $<%= name %>; }
  <% end %>
}

.bubble {
  display: inline-block;
  width: 0.92em;
  height: 0.92em;
  border-radius: 2px;
  vertical-align: baseline;
  position: relative;
  top: 1px;
  margin-left: 0.25em;

  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> { background-color: $<%= name %>; }
  <% end %>
}

.project-banner {
  <% Houston.config.project_colors.each do |name, value| %>
    &.<%= name %> { background-color: $<%= name %>; }
  <% end %>
}

.modal-header { background-color: #60615B; }

<% Houston.config.project_colors.each do |name, value| %>
  #new_ticket_modal.<%= name %> {
    .modal-header { background-color: $<%= name %>; }
  }
<% end %>

td.ticket-type { padding: 0 !important; }
.ticket-type {
  background: #efefef;
  width: 6px;
  min-width: 6px;
  max-width: 6px;
  
  &.ticket-type-na { background: transparent; }
  <% Houston.config.ticket_colors.each do |name, value| %>
    &.ticket-type-<%= name.downcase %> { background: #<%= value %> !important; }
  <% end %>
}

.stoplight {
  display: inline-block;
  width: 9px;
  height: 9px;
  border-radius: 9px;
  margin-right: 4px;
  
  &.red {           background-color: rgb(181,   0,   0); box-shadow: 0 0 7px rgba(181,   0,   0, 0.75); }  // #b50000
  &.yellow {        background-color: rgb(213, 177,  32); box-shadow: 0 0 7px rgba(213, 177,  32, 0.75); }  // #d5b120
  &.orange {        background-color: rgb(223, 138,  61); box-shadow: 0 0 7px rgba(223, 138,  61, 0.75); }  // #df8a3d
  &.spring-green {  background-color: rgb(159, 189,  42); box-shadow: 0 0 7px rgba(159, 189,  42, 0.75); }  // #9fbd2a
  &.green {         background-color: rgb( 66, 168,   0); box-shadow: 0 0 7px rgba( 66, 168,   0, 0.75); }  // #42a800
}
