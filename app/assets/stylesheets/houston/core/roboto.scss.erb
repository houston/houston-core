@font-face {
    font-family: 'roboto';
    src: url('<%= font_path("roboto-black-webfont.eot") %>');
    src: url('<%= font_path("roboto-black-webfont.eot") %>?#iefix') format('embedded-opentype'),
         url('<%= font_path("roboto-black-webfont.woff") %>') format('woff'),
         url('<%= font_path("roboto-black-webfont.ttf") %>') format('truetype'),
         url('<%= font_path("roboto-black-webfont.svg") %>#robotoblack') format('svg');
    font-weight: 900;
    font-style: normal;
}

